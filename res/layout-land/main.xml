<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/result" android:layout_width="fill_parent"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:gravity="center_vertical" android:paddingLeft="6dip"
			android:minHeight="?android:attr/listPreferredItemHeight"
			android:layout_height="wrap_content" />
			
		<TextView android:id="@+id/reciprocal_notice"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="reciprocal conversion" 
			android:visibility="gone"
			/>
	
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			
			<FrameLayout android:layout_width="250dip" android:layout_height="fill_parent">
				<include layout="@layout/unit_entry" />
			</FrameLayout>
				
			<include layout="@layout/keypad" />
			
		</LinearLayout>
	</LinearLayout>
	
	<include layout="@layout/history" />
</FrameLayout>
